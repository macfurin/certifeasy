<h2>Connexion</h2>

<p>Saisissez les identifiants choisis lors de votre inscription</p>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <fieldset>
      <div class="clearfix">
        <%= f.label :email %>
        <div class="input">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="clearfix">
        <%= f.label :password %>
        <div class="input">
          <%= f.password_field :password %>
        </div>
      </div>
      <% if devise_mapping.rememberable? -%>
          <div class="clearfix">
            <div class="input">
              <label>
                <%= f.check_box :remember_me %>
                <span>Se souvenir de moi</span>
              </label>
            </div>
          </div>
      <% end -%>
    </fieldset>


    <div class="actions">
      <%= f.submit "Se connecter", :class => "btn large primary" %>&nbsp;&nbsp;
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
          <span><%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name) %></span>
      <% end -%>
    </div>

<% end %>

<%= link_to('Pas encore inscrit ?', new_user_registration_path, :class=>"btn success large")  %>