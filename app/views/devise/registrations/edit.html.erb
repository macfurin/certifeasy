<h2>Editer mon compte</h2>

<%= devise_error_messages! %>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :put}, :wrapper => :inline) do |f| %>

    <fieldset>

      <%= f.input :firstname %>
      <%= f.input :lastname %>
      <%= f.input :dob, :start_year =>getBirthDateStart, :end_year=>getBirthDateEnd %>
      <%= f.input :street %>
      <%= f.input :zipcode %>
      <%= f.input :town %>
      <%#= f.input :country %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.input :current_password %>

    </fieldset>

    <div class="actions">
      <%= f.button :submit, :class => 'primary' %>&nbsp;&nbsp;
      <%= link_to "Supprimer mon compte", registration_path(resource_name), :confirm => "Etes-vous sÃ»r?", :method => :delete, :class=>'btn danger' %>
    </div>

<% end %>

